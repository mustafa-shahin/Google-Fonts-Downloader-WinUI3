<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Fonts_Downloader.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fonts_Downloader">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <SolidColorBrush x:Key="WindowCaptionBackground" Color="#323334"/>
            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled" Color="#323334"/>

            <!-- Theme Colors -->
            <SolidColorBrush x:Key="AppBackgroundColor" Color="#1e1e1e"/>
            <SolidColorBrush x:Key="PanelBackgroundColor" Color="#212124"/>
            <SolidColorBrush x:Key="PrimaryTextColor" Color="#b9b9b9"/>
            <SolidColorBrush x:Key="AccentColor" Color="#12a3ff"/>
            <SolidColorBrush x:Key="SecondaryColor" Color="#9b2b22"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>